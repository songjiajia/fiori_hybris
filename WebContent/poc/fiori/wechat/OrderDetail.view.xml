<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="poc.fiori.wechat.OrderDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Order Detail" id="OrderDetail" showNavButton="true" navButtonPress="onOrderDetailBack">
		<content>
 		<ObjectHeader title="{/date}" number="{/totalPrice}" numberUnit="EUR">
		<attributes>
            <ObjectAttribute text="{/@code}"/>
            <ObjectAttribute text="{/deliveryAddress/streetname}"/> 
         </attributes>
		</ObjectHeader> 
 		<List id="idOrderDetaillist"  itemPress="onOrderDetail"
			 items="{/entries/entry/}">
			 <items>
			<CustomListItem id="idOrderDetailItem" type="Active">	
 	    <ObjectHeader  title="Order Number" number="{basePrice}" numberUnit="EUR">
		    <attributes>
            <ObjectAttribute text="{quantity}"/>
            </attributes>
			</ObjectHeader>  
			</CustomListItem>
			</items>
			</List>	 
		</content>
	</Page>
</core:View>