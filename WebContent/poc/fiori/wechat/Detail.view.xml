<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="poc.fiori.wechat.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Details" showNavButton="true" navButtonPress="onBack">
	   <footer>
			<Bar>
				<contentMiddle>
					<Button
					    id="tocart"
						text="Add to cart"
						enabled="false"
						press="handleCart"
						type="Accept" />
				</contentMiddle>
				<contentRight>
					<Button
					    icon="sap-icon://cart"
						enabled="true"
						press="displayCart"/>
				</contentRight>
			</Bar>
		</footer>
		<content>
			<ObjectHeader id="ProductHead" >
				<attributes>
					<ObjectAttribute 
						id="ProductAtt" />
				</attributes>
		    </ObjectHeader>
		    <IconTabBar id="TabBar">
				<items>
					<IconTabFilter id="InfoTab" icon="sap-icon://hint">
					    <content>
					    <VBox><items>					    
						    <Label></Label>
						    <HBox>
						    <Label id="tLabelColor" text= "Color" textAlign="Center"></Label>
					        <SegmentedButton id="bColors">
					        </SegmentedButton>
					        </HBox>
						    <Label></Label>
						    <HBox>	
						    <Label id="tLabelSize" text= "Size" textAlign="Center"></Label>
					        <Select id="sizeSelect" change="changeSize"></Select>
					        </HBox>		    
					    </items></VBox>
					    </content>
						<!--  <mvc:XMLView viewName="poc.fiori.wechat.Info"></mvc:XMLView>-->
					</IconTabFilter>
					<IconTabFilter id="NotesTab" icon="sap-icon://notes">
						<!-- <mvc:XMLView viewName="poc.fiori.wechat.Attachments"></mvc:XMLView> -->
						<content>
							<Label></Label>
							<HBox><items>
							<Label id="tDes" text= "Description" textAlign="Center"></Label>
							<VBox width="80%">
						    <Text id="sDes" maxLines="4"></Text>
						    </VBox>
						    </items></HBox>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>	
				
	        <VBox class="HeaderInfo" >
		    <items>
		      <Label text="Quantity" />
		      <HBox alignItems="Center">
		       <Button id="minus" icon="sap-icon://less" press="onPress"/>		       
		       <core:HTML id="separator"></core:HTML>		       
		       <Input id="input" class="input" type="Number" maxLength="3" value="1" width="3rem" enabled="false"/> 		           
		       <Button id="plus" icon="sap-icon://add" press="onPress"/>       
              </HBox>
		    </items>
		  </VBox>
		</content>
	</Page>
</core:View>