<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="poc.fiori.wechat.OrderList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Order List" id="OrderList" showNavButton="true" navButtonPress="onOrderListBack">
		<content>
			<List id="idOrderList"  itemPress="onOrderDetail"
			 items="{/orders/order/}">
			 <items>
			<CustomListItem id="idOrderList" type="Active">	
 	    <ObjectHeader  title="Order Number" number="{totalPrice}" numberUnit="EUR">
		    <statuses>
      <ObjectStatus
        text="{status}"
        state="Success" />
        </statuses>
		    <attributes>
            <ObjectAttribute text="{@code}" id="idOrderNumber" class="orderNumber"/>
            <ObjectAttribute text="{date}"/>
            </attributes>
			</ObjectHeader>  
			</CustomListItem>
			</items>
			</List>
		</content>
	</Page>
</core:View>