<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="poc.fiori.wechat.OrderList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Order List" id="OrderList" showNavButton="true" navButtonPress="onOrderListBack">
		<content>
			<List id="idOrderList"  
			 items="{/orders/order/}">
			 <items>
			<CustomListItem id="idOrderListItem" press="onOrderDetail" type="Active">	
 	    <ObjectHeader  title="{path:'@code', formatter:'.formatOrderNumber'}" number="{totalPrice}" numberUnit="EUR / UNIT">
		    <statuses>
      <ObjectStatus
        text="{status}"
        state="Success" />
        </statuses>
		    <attributes>
            <ObjectAttribute text="{path: 'date',formatter:'.formatDate'}" id="test"/>
            </attributes>
			</ObjectHeader>  
			</CustomListItem>
			</items>
			</List>
		</content>
	</Page>
</core:View>