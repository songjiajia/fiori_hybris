<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="poc.fiori.wechat.newPayment" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Add New Credit"  showNavButton="true" navButtonPress="onBack">
		
	       <footer>
			<Bar>
				<contentMiddle>
					<Button
					    id="ok"
						text="OK"
						enabled="true"
						press="handleAccept"
						type="Accept" />
				    <Button
					    id="cancel"
						text="Cancel"
						enabled="true"
						press="handleCancel"
						type="Reject" />
				</contentMiddle>
			</Bar>
		</footer>
		<content>
		    <Label></Label>
		    <VBox id="div" width="90%"><items>
			<Label text="*Bank Card type:"></Label>
			<Input id="iCreType" editable="false" value="American Express"></Input>
			<VBox id="types">
			 <RadioButton groupName="Ctype" text="American Express" select="chooseCType" selected="true" />
      <RadioButton groupName="Ctype" text="Visa" select="chooseCType" />
      <RadioButton groupName="Ctype" text="China Unionpay"  select="chooseCType"/>
			</VBox>
			<Label  text="*Card number:"></Label>
			<Input id="iCardnum"></Input>
			<Label  text="*Owner name:"></Label>
			<Input id="iName"></Input>
			<Label  text="*Verification number:"></Label>	
			<Input id="iVnum"></Input>		
				<Label  text="*Expiry Date:"></Label>	
			<HBox><Select id="monthSelect">
			 <core:Item key="month" text="month" />
			  <core:Item key="1" text="1" />
			   <core:Item key="2" text="2" />
			    <core:Item key="3" text="3" />
			     <core:Item key="4" text="4" />
			     <core:Item key="5" text="5" />
			     <core:Item key="6" text="6" />
			     <core:Item key="7" text="7" />
			     <core:Item key="8" text="8" />
			     <core:Item key="9" text="9" />
			     <core:Item key="10" text="10" />
			     <core:Item key="11" text="11" />
			     <core:Item key="12" text="12" />
			     </Select>
			<Select id="yearSelect">
			 <core:Item key="year" text="year" />
			  <core:Item key="2014" text="2014" />
			   <core:Item key="2015" text="2015" />
			    <core:Item key="2016" text="2016" />
			     <core:Item key="2017" text="2017" />
			     <core:Item key="2018" text="2018" />
			     <core:Item key="2019" text="2019" />
			     <core:Item key="2020" text="2020" />
			    
			
			</Select>
			</HBox>
			</items></VBox>
		</content>
		
	</Page>
</core:View>