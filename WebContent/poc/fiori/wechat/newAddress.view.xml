<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="poc.fiori.wechat.newAddress" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Add New Address" id="newAddress" showNavButton="true" navButtonPress="onBack">
	  <footer>
			<Bar>
				<contentMiddle>
					<Button
					    id="save"
						text="Save"
						enabled="false"
						press="handleAccept"
						type="Accept"/>
<!--				    <Button
					    id="cancel"
						text="Cancel"
						enabled="true"
						press="handleCancel"
						type="Reject" />  -->
				</contentMiddle>
			</Bar>
		</footer>
		<content>
		    <Label></Label>
		    <VBox id="div" width="90%"><items>
			<Label text="*LastName:"></Label>
			<Input id="lName" liveChange="handleChange"></Input>
			<Label text="*FirstName:"></Label>
			<Input id="fName" liveChange="handleChange"></Input>
			<Label text="*Address Line:"></Label>			
			<TextArea id="tAddr" rows="3" width="100%" liveChange="handleChange"></TextArea>
			</items></VBox>
		</content>
	</Page>
</core:View>