<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="poc.fiori.wechat.search" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Search" id="Search">
		<subHeader>
			<Bar>
				<contentMiddle>
					<SearchField id="idSearch" search="onSearch" width="100%" />
				</contentMiddle>
			</Bar>
		</subHeader>
		<VBox>
			<items>
				<HBox justifyContent="Center" alignItems="Start">
					<items>
						<HBox width="20em">
							<Button text="Sunglasses" id="idSunglasses" width="10em" press="onCatButtonsPress" />
						</HBox>
						<HBox width="20em">
							<Button text="Shirt" id="idShirt" width="10em" press="onCatButtonsPress" />
						</HBox>
						<HBox width="20em">
							<Button text="Shoes"  id="idShoes" width="10em" press="onCatButtonsPress" />
						</HBox>
					</items>
				</HBox>
				<HBox justifyContent="Center" alignItems="Start">
					<items>
						<HBox width="20em">
							<Button text="Caps" id="idCaps" width="10em" press="onCatButtonsPress" />
						</HBox>
						<HBox width="20em">
							<Button text="Clothes" id="idClothes" width="10em" press="onCatButtonsPress" />
						</HBox>
						<HBox width="20em">
							<Button text="Tool"  id="idTools" width="10em" press="onCatButtonsPress" />
						</HBox>
					</items>
				</HBox>
			</items>
		</VBox>
		<content>
  <!--   <Image id="idImage" src="poc/fiori/wechat/brand.jpg" width="100%" /> 			
			<List id="idList" selectionChange="onSelectionChange" itemPress="onItemPress">
			</List>  -->  
		</content>
		 <footer>
      <Bar>
        <contentRight>
          <Button icon="sap-icon://cart" press="onCartPress" />
        </contentRight>
      </Bar>
    </footer>
	</Page>
</core:View>